<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="piu_tools.Views.UnlockableSongDetails"
             xmlns:vm="clr-namespace:piu_tools.ViewModels"
             xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:UnlockableSongDetailsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10">            
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Spacing="5">
                    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <ffImage:CachedImage Source="{Binding SelectedMusic.SongBanner}" Aspect="AspectFill" RetryCount="3" RetryDelay="3"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="{Binding SelectedMusic.SongArtist}" TextColor="Black" FontSize="20" />
                    </StackLayout>

                    <StackLayout BackgroundColor="Yellow">
                        <Label Text="Singles" />
                        <ListView ItemsSource="{Binding SinglesList}" HasUnevenRows="True">
                           <ListView.ItemTemplate>
                               <DataTemplate>
                                   <ViewCell>
                                       <ViewCell.View>
                                            <StackLayout BackgroundColor="Aqua">
                                                <StackLayout>
                                                    <Label Text="{Binding Level}"/>
                                                </StackLayout>
                                                <StackLayout Orientation="Horizontal">
                                                    <CheckBox IsChecked="{Binding Done}" />
                                                    <Label Text="{Binding Require}" />
                                                </StackLayout>
                                           
                                            </StackLayout>
                                       </ViewCell.View>
                                   </ViewCell>
                               </DataTemplate>
                           </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                    
                    <StackLayout>
                        <Label Text="Doubles" />
                        <ListView ItemsSource="{Binding DoublesList}" HasUnevenRows="True" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <ViewCell.View>
                                            <StackLayout>
                                                
                                                <StackLayout>
                                                    <Label Text="{Binding Level}"/>
                                                </StackLayout>
                                                
                                                <StackLayout Orientation="Horizontal">
                                                    <CheckBox IsChecked="{Binding Done}" />
                                                    <Label Text="{Binding Require}" />
                                                </StackLayout>
                                                
                                            </StackLayout>
                                        </ViewCell.View>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Co-Ops" />
                            <ListView ItemsSource="{Binding CoopsList}" HasUnevenRows="True" >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <ViewCell.View>
                                                <StackLayout>
                                                    <StackLayout>
                                                        <Label Text="{Binding Level}"/>
                                                    </StackLayout>

                                                    <StackLayout Orientation="Vertical">
                                                        <CheckBox IsChecked="{Binding Done}" />
                                                        <Label Text="{Binding Require}" />
                                                    </StackLayout>
                                                    
                                                </StackLayout>
                                            </ViewCell.View>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                    </StackLayout>
                </StackLayout>           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
